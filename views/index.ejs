<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Graduate Recruitment System</title>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
  	<div class="container">
        <div class = "row">
            <a href= "https://github.com/haris00/graduateRecruitmentSystem">My GitHub Link</a>
        </div>
	  	<div class="row">
		    <div class="col-xs-12">
                <form action="/">
                    <div class="form-group">
                            <label for="projectTitle">ProjectTitle:</label>
                            <input type="text" class="form-control" id="usr" name="projectTitle">
                    </div>
                    <div class="form-group">
                            <label for="projectDescription">Description:</label>
                            <textarea class="form-control" rows="5" id="comment" name="projectDescription"></textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                <h2>Projects</h2>
                <ul class="list-group">
                    <% projects.forEach(function(project){ %>
                    <li class="list-group-item">  
                        <h5>Project Title:</h5><%= project.projectTitle%>
                        <h5>Project Description:</h5><%= project.projectDescription%>
                    </li>                    
                     <% })%>
                </ul>
		    </div>
	    </div>
	</div>
  </body>
</html>