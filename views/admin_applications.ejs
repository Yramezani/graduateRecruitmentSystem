    <script src="https://unpkg.com/@pusher/chatkit@0.7.12/dist/web/chatkit.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <style>
      .jumbotron {
        background-color: darkslategray;
        color: white;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="jumbotron">
        <div>
          <p style="text-align:right;">
            <a href="/logout" class="btn btn-info btn-lg">
              <span class="glyphicon glyphicon-log-out"></span> Log out
            </a>
          </p>
        </div>
        <h1>Graduate Recruitment System</h1>
      </div>

      <div class="jumbotron">
        <!-- <% user.forEach(function(user){ %> <%
        application.forEach(function(application){ %> <% if
        (application.applicant_id==user.id) { %>
        <p><%= user.username%></p>
        <multiview> <p><%= application.cover_letter%></p> </multiview> <% }%> <%
        })%> <% })%> -->
        
          <% user.forEach(function(user){ %>
            <br/><br/>
          <div class="row">


                <div class="card">

                    <div class="card-block p-1">

                  <div class="card-body">

                    <ul class="list-group">
                            <li class="list-group-item">
                            <div class="list-group-item bg-danger mb-3">
                                <div class="card-title">
                                    <p class="card-title">Applicant Name: <%= user.username%></p>
                                  </div>
                                </div></li>

                            <% application.forEach(function(application){ %>
                            <% if (application.applicant_id==user.id) { %>
                          <li class="list-group-item">
                              <div class="list-group-item bg-success mb-3">
                                <div class="card-body">
                                  <p class="card-title">Cover Letter</p>
                                  <h6 class="card-text"><%= application.cover_letter%></h6>
                                </div>
                              </div>
                            </a>
                          </li>
                        </ul>
                    <hr>
                    <form id="sendOffer" method="get" action="/api/admin/offer/<%= application.position_id%>/<%= application.applicant_id%>">
                      <div class="input-group">
                        <div class="input-group-append">
                          <button type="submit" class="btn btn-warning" style="text-align:right;">Send Admission Offer</button>
                        </div>
                      </div>
                    </form><br/>
                    <p style="text-align:right;">
                      <a href="/admin" class="btn btn-success" role="button">Go to Home</a>
                      
                      <% }%>
                      <% })%>
                  </div>

                  </div>

                </div>
              </div>
              <% })%>
       
      </div>
    </div>
  </body>
</html>
