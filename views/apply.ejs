<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Graduate Recruitment System</title>

    <!-- Latest compiled and minified CSS -->
    <!--
      <link
        rel="stylesheet"
        href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      />
    -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
    />

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://unpkg.com/@pusher/chatkit@0.7.12/dist/web/chatkit.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <style>
      .jumbotron {
        background-color: darkslategray;
        color: white;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="jumbotron">
        <div>
          <h1>Graduate Recruitment System</h1>
          <p style="text-align:right;">
            <a href="/logout" class="btn btn-info btn-lg">
              <span class="glyphicon glyphicon-log-out"></span> Log out
            </a>

            <a href="/" class="btn btn-success btn-lg" role="button">
              <span class="glyphicon glyphicon-log-out"></span> Home
            </a>
          </p>
        </div>
      </div>

      <div class="jumbotron">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <!--
              <h2>Admin Dashboard</h2>
              <br /><br />
            -->

            <!-- <h4>Click to Edit</h4> -->
            <!-- <a href="/api/dashboard/position/<%= position.id%>"> -->
            <div class="list-group-item bg-success mb-3">
              <div class="card-header"><%= position.level%></div>
              <div class="card-body">
                <h5 class="card-title">Title: <%= position.title%></h5>
                <p class="card-text">Description: <%= position.description%></p>
                <!--
                  <p style="text-align:right;">
                    <a
                      href="/api/dashboard/apply/<%= position.id%>"
                      class="btn btn-warning"
                      role="button"
                      >Apply to this Position</a
                    >
                  </p>
                -->
              </div>
            </div>

            <form
              action="/api/dashboard/apply"
              method="POST"
              name="applicationForm"
            >
              <div class="form-group">
                <label for="description">Type or Paste a Cover Letter</label>
                <textarea
                  rows="10"
                  class="form-control"
                  name="description"
                  placeholder="Add text here..."
                ></textarea>
              </div>
              <input type="hidden" name="positionid" value=<%= position.id%> />
              <div class="form-group">
                <button type="submit" class="btn btn-warning">Apply</button>

                <a href="/api/dashboard" class="btn btn-secondary" role="button"
                  >Cancel</a
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
