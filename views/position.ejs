<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Graduate Recruitment System</title>

    <!-- Latest compiled and minified CSS -->
    <!--
      <link
        rel="stylesheet"
        href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      />
    -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
    />

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://unpkg.com/@pusher/chatkit@0.7.12/dist/web/chatkit.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <style>
      .jumbotron {
        background-color: darkslategray;
        color: white;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="jumbotron">
        <div>
        <h1>Graduate Recruitment System</h1>
          <p style="text-align:right;">
            <a href="/logout" class="btn btn-info btn-lg">
              <span class="glyphicon glyphicon-log-out"></span> Log out
            </a>
            
              <a href="/" class="btn btn-success btn-lg" role="button">
              <span class="glyphicon glyphicon-log-out"></span> Home
            </a>
          </p>
        </div>
      </div>

      <div class="jumbotron">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <!-- <h2>Admin Dashboard</h2>
            <br /><br /> -->

            <!-- <h4>Click to Edit</h4> -->
            <!-- <a href="/api/dashboard/position/<%= position.id%>"> -->
            <div class="list-group-item bg-success mb-3">
              <div class="card-header"><%= position.level%></div>
              <div class="card-body">
                <h5 class="card-title">Title: <%= position.title%></h5>
                <p class="card-text">Description: <%= position.description%></p>
                <p style="text-align:right;">
                    <% if (decision=="A") { %>
                      <p style="text-align:right;">You have accepted this offer</p>
                      <% } else { %>
                    <a href="/api/dashboard/apply/<%= position.id%>" formmethod="get" class="btn btn-warning" role="button">Apply to this Position</a>
                    </p>
                    <% }%>
              </div>
            </div>
          </div>
        </div>
        <br /><br />
        <div class="row">
          
            <div class="col-md-8">
              <div class="card">
                <div class="card-header">Chatbox</div>
                <div class="card-body">
                  <dl id="messageList"></dl>

                  <ul class="list-group">
                        <% message.forEach(function(message){ %>
                        <li class="list-group-item">
                            <% if (message.sender_id==position.userId) { %>
                            <div class="list-group-item bg-success mb-3">
                              <div class="card-body">
                                <p class="card-title" style="text-align:left;font-size:12px;">Superviser at: <%= message.createdAt%></p>
                                <h6 class="card-text" style="text-align:left;font-size:15px;"><%= message.message_txt%></h6>
                              </div>
                            </div>
                            <% } else { %>
                              <div class="list-group-item active mb-3">
                                  <div class="card-body">
                                    <p class="card-title" style="text-align:right;font-size:12px;">Me at: <%= message.createdAt%></p>
                                    <h6 class="card-text" style="text-align:right;font-size:15px;"><%= message.message_txt%></h6>
                                  </div>
                                </div>
                                <% }%>
                          </a>
                        </li>
                        <% })%>
                      </ul>

                  <hr>
                  <form id="sendMessage" method="get" action="/api/dashboard/messages/<%= position.id%>/<%= position.userId%>">
                    <div class="input-group">
                      <input type="text" name="messagetxt" autocomplete="off" class="form-control" placeholder="Type your message...">
                      <div class="input-group-append">
                        <button class="btn btn-primary">Send</button>
                      </div>
                    </div>
                  </form><br/>
                  <p style="text-align:right;">
                    <a href="/" class="btn btn-success" role="button">Go to Home</a>
                </div>
              </div>
            </div>
            </div>
         
          <!-- <form action="/api/dashboard/message" method="post"> 
            <div class="form-group">
              <button
                type="submit"
                class="btn btn-primary"
              >
                Messages
              </button>
              </button>
            </div>
          </form> -->
        </div>
      </div>
    </div>
  </body>
</html>
