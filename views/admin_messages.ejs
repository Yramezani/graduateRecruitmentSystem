<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Graduate Recruitment System</title>

    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    />

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style>
      .jumbotron {
        background-color: darkslategray;
        color: white;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="jumbotron">
          <div>
              <p style="text-align:right;">
                <a href="/logout" class="btn btn-info btn-lg">
                  <span class="glyphicon glyphicon-log-out"></span> Log out
                </a>
              </p>
            </div>
            <h1>Graduate Recruitment System</h1></div>

      <div class="jumbotron">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <h2>Admin Dashboard</h2><br/><br/>
            
            
            <% sender.forEach(function(sender){ %>
            <ul class="list-group" >
                    <% message.forEach(function(message){ %>
                  <li class="list-group-item">
                      <h5>Student Id: <%= sender.senderid%></h5>
                      <div class="list-group-item active" >
                          <div class="card-header"><%= message."createdAt"%></div>
                          <div class="card-body">
                            <h5 class="card-title">Received: <%= message."createdAt"%></h5>
                            <p class="card-text"><%= message.text%></p>
                          </div>
                        </div>
                      </a></li>
                  <% })%>
              </ul>
              
            <div class="col-md-8">
              <div class="card">
                <div class="card-body">
                  <form id="sendMessage" method="post" action="/api/admin/message/<%= message.positionId%>/<%= sender.senderId%>">
                    <div class="input-group">
                      <input type="text" name="message" class="form-control" placeholder="Type your message...">
                      <div class="input-group-append">
                        <button class="btn btn-primary">Send</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
         
              <% })%>

           
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
