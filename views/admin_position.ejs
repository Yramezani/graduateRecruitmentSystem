    />

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://unpkg.com/@pusher/chatkit@0.7.12/dist/web/chatkit.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <style>
      .jumbotron {
        background-color: darkslategray;
        color: white;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="jumbotron">
        <div>
          <p style="text-align:right;">
            <a href="/logout" class="btn btn-info btn-lg">
              <span class="glyphicon glyphicon-log-out"></span> Log out
            </a>
          </p>
        </div>
        <h1>Graduate Recruitment System</h1>
      </div>

      <div class="jumbotron">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <h2>Admin Dashboard</h2>
            <br /><br />

            <h4>Click to Edit</h4>
            <!-- <a href="/api/admin/position/<%= position.id%>"> -->
            <div class="list-group-item active">
              <div class="card-header"><%= position.level%></div>
              <div class="card-body">
                <h5 class="card-title"><%= position.title%></h5>
                <p class="card-text"><%= position.description%></p>
              </div>
            </div>
          </div>
        </div>
        <br /><br />
        <div class="row">
          <!--
            <div class="col-md-8">
              <div class="card">
                <div class="card-header">Chatbox</div>
                <div class="card-body">
                  <dl id="messageList"></dl>
                  <hr>
                  <form id="sendMessage" method="post" action="/api/admin/message/<%= position.id%>">
                    <div class="input-group">
                      <input type="text" name="message" class="form-control" placeholder="Type your message...">
                      <div class="input-group-append">
                        <button class="btn btn-primary">Send</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            </div>
          -->
          <form action="/api/admin/message/<%= position.id%>" method="get">
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Messages</button>
              <a
                href="/api/dashboard/applications/<%= position.id%>"
                formmethod="get"
                class="btn btn-warning"
                role="button"
                >View Applications</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
